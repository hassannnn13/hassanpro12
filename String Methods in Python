
# strings are immutable (cannot be changed)(Interview question)
a="Hassan!!!!!!!!!!!!!!"
print(len(a))
print(a.upper()) 
print(a.lower())
print(a.rstrip("!")) 
b="!!!!!!!! Hassan !!!!!!!!!" 
print(b.rstrip("!")) #rstrip only removes trailing characters which are after the string
print(b.replace("Hassan","Hashir")) #replaces all occurences of Hassan with Hashir  
print(b.split(" ")) #splits the string into a list
blogHeading="introduction to js"
print(blogHeading.capitalize()) #capitalizes the first letter of the string and makes all other letters lower case
heading = "introductIOn tO jS" 
h1 = heading.capitalize()
print(h1) #another method to capitalize the first letter of the string
c="Welcome to the console!!!"
print(c.center(50, "."))
print(len(c))
print(len(c.center(50))) #centers the string
print(a.count("s")) #counts the number of times the given value has occured within the string
print(b.endswith("n")) #returns true if the string ends with the given value
print(b.endswith("!")) #returns true if the string ends with the given value
x= "Welcome to the console!!!"
print(x.endswith("to",4,10)) #returns true if the string ends with the given value
y= "He's name is Dan. He is an honest man."
print(y.find("is")) #returns the index of the first occurence of the given value
print(y.find("ishh")) #returns -1 if the given value is not found
# print(str1.index("ishh")) #returns the index of the first occurence of the given
b = "WelcomeToTheConsole"
print(b.isalnum()) #returns true if the string consists of A-Z,a-z,0-9
b = "WelcomeToTheConsole"
print(b.isalpha()) #returns true if the string consists of A-Z,a-z if there any number then it returns false
print(b.islower()) #returns true if all the characters in the string are lower case
print(b.isupper()) #returns true if all the characters in the string are upper case
str1 = "We wish you a Merry Christmas." #if i use \n then it returns false
print(str1.isprintable()) #returns true if all the values within the given string are printable
str1 = "        " #using spacebar or tab
print(str1.isspace())
str2 = "" 
print(str2.isspace())
d = "World Health Organization"
print(d.istitle()) #returns true if the first letter of each word of the string is capitalized
e = "To kill a Mocking bird"
print(e.startswith("To"))
print(e.swapcase()) #changes the character casing of the string
print(e.title()) #capitalizes the first letter of each word in the string


